<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.caster.caster_android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CasterTheme">

        <receiver android:name=".AudioBroadcastReceiver">
            <intent-filter>
                <action android:name="com.caster.caster_android.ACTION_PLAY"/>
            </intent-filter>
        </receiver>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/CasterTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PodcastPlayer"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_play_podcast"
            android:theme="@style/CasterTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="Profile" >
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_sign_in_" >
        </activity>
        <activity android:name=".views.SignUpActivity"
            android:label="Sign Up">
        </activity>
    </application>

</manifest>
