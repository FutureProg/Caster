<?xml version="1.0" encoding="utf-8"?>
<com.caster.caster_android.views.PodcastBox xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="130dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_height="130dp"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="8dp"
        card_view:cardUseCompatPadding="true"
        android:stateListAnimator="@anim/podcast_box_elevation"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/box_cover_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/dummy_podcast_img"/>

            <TextView
                android:id="@+id/title"
                android:background="#b3000000"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="Down"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</com.caster.caster_android.views.PodcastBox>