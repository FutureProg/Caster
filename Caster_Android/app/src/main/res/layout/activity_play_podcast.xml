<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#E6E6E6"
    tools:context="com.caster.caster_android.PlayPodcast">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cover_image"
            android:src="@drawable/cover"
            android:layout_gravity="top"
            android:adjustViewBounds="true"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar"
            android:layout_alignBottom="@+id/cover_image"
            android:layout_toEndOf="@+id/length" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Elapsed Time"
            android:id="@+id/length"
            android:layout_alignTop="@+id/seekbar"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/cover_image" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="#E6E6E6">

        <LinearLayout
            android:id="@+id/controls"
            android:background="@color/Caster_Colour_Red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowOrderPreserved="false"
                android:columnOrderPreserved="false"
                android:clickable="false"
                android:layout_gravity="center"
                android:id="@+id/controlsLayout">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="60dp"
                    android:id="@+id/previousButton"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@drawable/previous"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:onClick="previous"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="60dp"
                    android:id="@+id/playButton"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:src="@drawable/play"
                    android:nestedScrollingEnabled="false"
                    android:cropToPadding="false"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:onClick="play"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="60dp"
                    android:id="@+id/nextButton"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/next"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/authorLayout"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="#E6E6E6"
                    android:layout_columnSpan="3">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/profilePicture"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:src="@drawable/default_profile"
                            android:cropToPadding="false"
                            android:baselineAlignBottom="false"
                            android:scaleType="fitStart"
                            android:adjustViewBounds="true"
                            android:onClick="profilePage"
                            android:maxHeight="60dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="@string/author"
                            android:id="@+id/author_name"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_gravity="center"
                            android:onClick="profilePage"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/subscribe"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:src="@drawable/subscribe"
                            android:scaleType="fitStart"
                            android:adjustViewBounds="true"
                            android:onClick="subscribe"
                            android:maxHeight="60dp"/>

                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionLayout"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:background="#E6E6E6">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/description"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Lorum ipsum dolor sit amet."/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentsLayout"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:background="#E6E6E6">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/commentBox"
                        android:background="#FFFFFF"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:hint="Enter Comment Here"
                        android:gravity="center" />
                </LinearLayout>

            </GridLayout>

        </LinearLayout>

        <!--COMMENTS SECTION-->



    </ScrollView>

</LinearLayout>
