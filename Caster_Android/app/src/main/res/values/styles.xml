<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="CasterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/Caster_Colour_Red_Dark</item>
        <item name="android:colorPrimaryDark">@color/Caster_Colour_Red_Dark</item>-->
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionbarTheme</item>
    </style>

    <style name="ActionbarTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:background" tools:ignore="NewApi">@color/Caster_Colour_Red</item>
        <item name="background">@color/Caster_Colour_Red</item>
        <item name="android:colorPrimary">@color/Caster_Colour_Red</item>
        <item name="android:colorPrimaryDark">@color/Caster_Colour_Red_Dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarOverlay.TextStyle</item>
    </style>
    <style name="AppTheme.ActionBarOverlay.TextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionbarTheme</item>
        <item name="colorPrimary">@color/Caster_Colour_Red</item>
        <item name="colorPrimaryDark">@color/Caster_Colour_Red_Dark</item>
        <item name="android:colorPrimary">@color/Caster_Colour_Red</item>
        <item name="android:colorPrimaryDark">@color/Caster_Colour_Red_Dark</item>
        <item name="android:colorBackground">@color/app_background_colour</item>
    </style>

    <style name="ProfileTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:colorPrimary">#000000</item>
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="android:actionMenuTextColor">#000</item>
    </style>
    <style name="ProfileTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>